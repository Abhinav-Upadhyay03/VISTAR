{
  "name": "vistar",
  "version": "0.1.2",
  "private": true,
  "description": "Vistar - A modern image processing application",
  "author": {
    "name": "Abhinav Upadhyay"
  },
  "main": "electron.js",
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_ENV=development concurrently \"vite\" \"npm:electron-dev\"",
    "electron-dev": "cross-env NODE_ENV=development wait-on http://localhost:5173 && electron .",
    "build": "cross-env NODE_ENV=production vite build && electron-builder",
    "build:publish": "cross-env NODE_ENV=production vite build && electron-builder -p always",
    "start": "electron .",
    "build-backend": "cd ../backend && python build.py",
    "build-all": "npm run build-backend && npm run build",
    "clean": "rm -rf dist electron-dist"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "dotenv": "^16.4.7",
    "electron-log": "^5.4.0",
    "electron-updater": "^6.2.1",
    "framer-motion": "^11.15.0",
    "lucide-react": "^0.510.0",
    "react": "^18.3.1",
    "react-cropper": "^2.3.3",
    "react-dom": "^18.3.1",
    "react-image-crop": "^11.0.7",
    "react-router-dom": "^6.28.0",
    "react-tooltip": "^5.28.1",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.3",
    "autoprefixer": "^10.4.20",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^36.2.1",
    "electron-builder": "^25.1.8",
    "electron-is-dev": "^3.0.1",
    "eslint": "^9.13.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.15",
    "vite": "^5.4.10",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.example.vistar",
    "productName": "Vistar",
    "directories": {
      "output": "electron-dist"
    },
    "publish": {
      "provider": "github",
      "owner": "Abhinav-Upadhyay03",
      "repo": "VISTAR"
    },
    "files": [
      "dist/**/*",
      "electron.js",
      "index.html",
      "package.json",
      "!dist/mac-arm64/**/*",
      "!dist/win-unpacked/**/*",
      "!dist/linux-unpacked/**/*",
      "!dist/*.dmg",
      "!dist/*.zip",
      "!dist/*.exe",
      "!dist/*.AppImage",
      "!dist/*.blockmap",
      "!dist/builder-effective-config.yaml"
    ],
    "extraResources": [
      {
        "from": "../backend/dist/flask_backend",
        "to": "flask_backend"
      }
    ],
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "icon": "icons/icon.ico"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "icons/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "icons/icon.png"
    }
  }
}